<% include head.ejs %>

    <section class="hero-signup is-success is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <h3 class="title_signup">SIGN UP</h3>
                    <div class="box">
                        <form method="post" action="/sign_up">
                            <div class="field">
                                <label class="label has-text-left">User Name</label>
                                <div class="control">
                                    <input name="username" class="input is-small" type="text" placeholder="First Name" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <label class="label has-text-left">First Name</label>
                                <div class="control">
                                    <input name="firstname" class="input is-small" type="text" placeholder="First Name" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <label class="label has-text-left">Last Name</label>
                                <div class="control">
                                    <input name="lastname" class="input is-small" type="text" placeholder="Last Name" autofocus="" />
                                </div>
                            </div>

                            <div class="field">
                                <label class="label has-text-left">E-mail</label>
                                <div class="control">
                                    <input name="email" class="input is-small" type="mail" placeholder="E-mail" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <label class="label has-text-left">Birthday</label>
                                <div class="control">
                                    <input name="birth" class="input is-small" type="date" placeholder="E-mail" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="label has-text-left">Password</label>
                                    <input name="password" class="input is-small" type="password" placeholder="password" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="label has-text-left">Confirm password</label>
                                    <input name="password_confirm" class="input is-small" type="password" placeholder="confirm password" autofocus="" />
                                </div>
                            </div>
                            <input type="submit" value="Register" class="button is-block is-info is-small">
                        </form>
                    </div>
                    <p class="has-text-grey">
                        <a href="signin.ejs">or signin here</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <% include foot.ejs %>