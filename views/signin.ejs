<% include head.ejs %>
    <section class="hero-signin is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <h3 class="title_signin">SIGN IN</h3>
                    <div class="box">
                        <form method="post" action="/sign_in">
                            <div class="field">
                                <label class="label has-text-left">Username</label>
                                <div class="control">
                                    <input name="username" class="input is-small" type="text" placeholder="Username" autofocus="" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="label has-text-left">Password</label>
                                    <input name="password" class="input is-small" type="password" placeholder="password" autofocus="" />
                                </div>
                            </div>
                            <input type="submit" value="login" class="button is-block is-info is-small">
                        </form>
                    </div>
                    <p class="has-text-grey">
                    </p>
                </div>
            </div>
        </div>
    </section>
